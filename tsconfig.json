{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "jsxImportSource": "@emotion/react",
    "baseUrl": ".",
    "paths": {
        "@features": ["src/features"],
        "@features/*": ["src/features/*"],
        "@assets/*": ["src/assets/*"],
        "@store": ["src/store"],
        "@store/*": ["src/store/*"],
        "@api": ["src/api"],
        "@api/*": ["src/api/*"],
        "@ui": ["src/ui"],
        "@ui/*": ["src/ui/*"],
        "@app": ["src/app"],
        "@app/*": ["src/app/*"],
        "@processes": ["src/processes"],
        "@processes/*": ["src/processes/*"],
        "@pages": ["src/pages"],
        "@pages/*": ["src/pages/*"],
        "@widgets": ["src/widgets"],
        "@widgets/*": ["src/widgets/*"],
        "@entities": ["src/entities"],
        "@entities/*": ["src/entities/*"],
        "@shared": ["src/shared"],
        "@shared/*": ["src/shared/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
